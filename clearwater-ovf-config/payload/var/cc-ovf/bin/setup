#!/bin/bash

#restart ssh
#apt-get update
#apt-get install -f -y
#apt-get install -y emacs23 dbus-x11 open-vm-tools xauth wireshark dpkg-dev ipcalc
#apt-get dist-upgrade -y

grep -q "^deb file:$(cd $(dirname $0)/..;pwd)" /etc/apt/sources.list
if [ $? -ne 0 ]; then
   echo "deb file:$(cd $(dirname $0)/..;pwd) binary/" >> /etc/apt/sources.list
fi

(
    cd $(dirname $0)/../default.cfg
    cp -rvp . /
)

